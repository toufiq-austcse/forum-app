{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@common/filters/*": [
        "./src/common/filters/*"
      ],
      "@common/guards/*": [
        "./src/common/guards/*"
      ],
      "@common/interceptors/*": [
        "./src/common/interceptors/*"
      ],
      "@common/http-clients/*": [
        "./src/common/http-clients/*"
      ],
      "@common/app-config/*": [
        "./src/common/app-config/*"
      ],
      "@common/database/*": [
        "./src/common/database/*"
      ],
      "@common/dto/*": [
        "./src/common/dto/*"
      ],
      "@common/utils/*": [
        "./src/common/utils/*"
      ],
      "@common/decorators/*": [
        "./src/common/decorators/*"
      ]
    }
  },
  "watchOptions": {
    "synchronousWatchDirectory": true
  }
}
